<div class='books index'>
  <h2>View Books</h2>

  <%= link_to('New Book', new_book_path, :class => 'action new') %>

  <table class='books list' summary='Books list'>
    <tr class='header'>
      <th>Title</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td class='actions'>
        <%= link_to('view', book_path(book), :class => 'action show') %>
        <%= link_to('edit', edit_book_path(book), :class => 'action edit') %>
        <%= link_to('delete', delete_book_path(book), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
